<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsecurity.tatix.menzworld">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddItemActivity" />
        <activity android:name=".MakeBillActivity" />
        <activity android:name=".ListAllItems" />
        <activity android:name=".BackUpRestore" />
        <activity android:name=".ShowSerial" />
        <activity android:name=".BillActivity" />
        <activity android:name=".ViewBillActivity" />
        <activity android:name=".ReportActivity"></activity>
    </application>

</manifest>
