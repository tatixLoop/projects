<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bg"
    tools:context="com.appsecurity.tatix.menzworld.ActivityChangePassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Password  :"
        android:id="@+id/textView26"
        android:layout_marginTop="93dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView27"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password       :"
        android:id="@+id/textView27"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView26"
        android:layout_alignEnd="@+id/textView29"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password :"
        android:id="@+id/textView29"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView27"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE"
        android:id="@+id/btn_change_password"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_newPass"
        android:layout_alignBaseline="@+id/textView27"
        android:layout_alignBottom="@+id/textView27"
        android:layout_alignStart="@+id/edit_confirm"
        android:inputType="numberPassword"
        android:background="#ffffff" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_confirm"
        android:inputType="numberPassword"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/textView29"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_passWord"
        android:layout_alignBaseline="@+id/textView26"
        android:layout_alignBottom="@+id/textView26"
        android:layout_alignStart="@+id/edit_newPass"
        android:inputType="numberPassword"
        android:background="#ffffff" />

</RelativeLayout>
