<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bg"
    tools:context="com.appsecurity.tatix.menzworld.AddItemActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true"        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Item"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/chk_others"
        android:layout_alignLeft="@+id/chk_others"
        android:textColor="#8b8a8a" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Shirt"
        android:id="@+id/chk_shirt"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffff"
        android:buttonTint="#ffffff" />

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jeans"
        android:id="@+id/chk_jeans"
        android:textColor="#ffffff"
        android:buttonTint="#ffffff"
        android:layout_above="@+id/chk_others"
        android:layout_alignLeft="@+id/chk_tshirt"
        android:layout_alignStart="@+id/chk_tshirt" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Other"
        android:id="@+id/chk_others"
        android:layout_below="@+id/chk_pants"
        android:layout_alignEnd="@+id/chk_pants"
        android:layout_alignRight="@+id/chk_pants"
        android:textColor="#ffffff"
        android:buttonTint="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRICE"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_below="@+id/chk_others"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_price"
        android:inputType="number"
        android:background="#ffffff"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELLING PRICE"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_below="@+id/txt_price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_selprice"
        android:inputType="number"
        android:background="#ffffff"
        android:layout_below="@+id/txt_price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCAN BARCODE"
        android:id="@+id/btn_barcode"
        android:layout_below="@+id/txt_numItems"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE DATA"
        android:id="@+id/btn_save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00000000"
        android:id="@+id/txt_barcode"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn_barcode"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginTop="13dp" />

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="T-shirt"
        android:id="@+id/chk_tshirt"
        android:textColor="#ffffff"
        android:buttonTint="#ffffff"
        android:layout_above="@+id/chk_jeans"
        android:layout_toRightOf="@+id/chk_inner"
        android:layout_toEndOf="@+id/chk_inner" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Pants"
        android:id="@+id/chk_pants"
        android:layout_below="@+id/chk_shirt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffff"
        android:buttonTint="#ffffff" />

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Shorts"
        android:id="@+id/chk_shorts"
        android:layout_below="@+id/chk_jeans"
        android:layout_alignStart="@+id/chk_jeans"
        android:layout_alignLeft="@+id/chk_jeans"
        android:textColor="#ffffff"
        android:buttonTint="#ffffff" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="InnerWear"
        android:id="@+id/chk_inner"
        android:layout_above="@+id/chk_shorts"
        android:layout_alignStart="@+id/chk_belt"
        android:layout_alignLeft="@+id/chk_belt"
        android:textColor="#ffffff"
        android:buttonTint="#ffffff" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Belt"
        android:id="@+id/chk_belt"
        android:textColor="#ffffff"
        android:layout_above="@+id/chk_inner"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:buttonTint="#ffffff" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Wallets"
        android:id="@+id/chk_wallets"
        android:layout_below="@+id/chk_inner"
        android:layout_alignStart="@+id/chk_inner"
        android:layout_alignLeft="@+id/chk_inner"
        android:textColor="#ffffff"
        android:buttonTint="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Item"
        android:id="@+id/textView6"
        android:layout_below="@+id/txt_selprice"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="37dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_numItems"
        android:text="1"
        android:inputType="number"
        android:background="#ffffff"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BRAND"
                android:textColor="#ffffff"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView3"
                android:layout_toRightOf="@+id/btn_barcode"
                android:layout_toEndOf="@+id/btn_barcode"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp" />

            <EditText
                android:layout_width="150dp"
                android:background="#ffffff"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_brand"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignRight="@+id/ckh_sx_l"
                android:layout_alignEnd="@+id/ckh_sx_l"
                android:layout_toRightOf="@+id/textView11"
                android:layout_toEndOf="@+id/textView11"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Size"
                android:id="@+id/textView12"
                android:textColor="#ffffff"
                android:layout_below="@+id/txt_price"
                android:layout_alignLeft="@+id/ckh_sx_s"
                android:layout_alignStart="@+id/ckh_sx_s"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:id="@+id/ckh_sx_s"
                android:textColor="#ffffff"
                android:buttonTint="#ffffff"
                android:checked="false"
                android:layout_alignBottom="@+id/txt_selprice"
                android:layout_centerHorizontal="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:id="@+id/ckh_sx_m"
                android:checked="false"
                android:textColor="#ffffff"
                android:buttonTint="#ffffff"
                android:layout_above="@+id/textView6"
                android:layout_alignLeft="@+id/ckh_sx_sxxl"
                android:layout_alignStart="@+id/ckh_sx_sxxl" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                android:id="@+id/ckh_sx_l"
                android:checked="false"
                android:textColor="#ffffff"
                android:buttonTint="#ffffff"
                android:layout_alignBaseline="@+id/ckh_sx_m"
                android:layout_alignBottom="@+id/ckh_sx_m"
                android:layout_toRightOf="@+id/ckh_sx_sxxl"
                android:layout_toEndOf="@+id/ckh_sx_sxxl" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:id="@+id/ckh_sx_xl"
                android:textColor="#ffffff"
                android:buttonTint="#ffffff"
                android:checked="false"
                android:layout_alignBaseline="@+id/ckh_sx_sxxl"
                android:layout_alignBottom="@+id/ckh_sx_sxxl"
                android:layout_alignLeft="@+id/ckh_sx_s"
                android:layout_alignStart="@+id/ckh_sx_s" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXL"
                android:id="@+id/ckh_sx_sxxl"
                android:textColor="#ffffff"
                android:buttonTint="#ffffff"
                android:checked="false"
                android:layout_above="@+id/ckh_sx_othr"
                android:layout_toRightOf="@+id/ckh_sx_xl"
                android:layout_toEndOf="@+id/ckh_sx_xl"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:id="@+id/ckh_sx_othr"
                android:textColor="#ffffff"
                android:buttonTint="#ffffff"
                android:checked="false"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignLeft="@+id/ckh_sx_xl"
                android:layout_alignStart="@+id/ckh_sx_xl" />

            <EditText
                android:layout_width="50dp"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dz_other"
                android:inputType="number"
                android:layout_alignBaseline="@+id/ckh_sx_othr"
                android:layout_alignBottom="@+id/ckh_sx_othr"
                android:layout_toRightOf="@+id/ckh_sx_othr"
                android:layout_toEndOf="@+id/ckh_sx_othr"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
