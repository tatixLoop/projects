<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appsecurity.tatix.menzworld.MakeBillActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCAN ITEM"
        android:id="@+id/btn_scan_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tbl_bill"
        android:stretchColumns="0,1,2"
        android:paddingTop="70dp"
        android:paddingBottom="70dp"
        android:layout_below="@+id/textView7"
        android:layout_toStartOf="@+id/txt_total"
        android:layout_marginEnd="37dp">
        <TableRow
            android:layout_width="fill_parent">
            <TextView

                android:gravity="left"
                android:text="ITEM CODE"
                />
            <TextView

                android:gravity="left"
                android:text="ITEM "
                />

            <TextView

                android:gravity="left"
                android:text="PRICE"
                />
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:id="@+id/textView"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/btn_gen_bill"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txt_total"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btn_cancel_bill"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Bill"
        android:id="@+id/btn_gen_bill"
        android:layout_alignTop="@+id/btn_cancel_bill"
        android:layout_alignEnd="@+id/txt_total" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or Enter Serial Number:"
        android:id="@+id/textView7"
        android:layout_below="@+id/btn_scan_item"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_serial"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_gen_bill"
        android:layout_alignEnd="@+id/textView"
        android:ems="4"
        android:inputType="number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Item"
        android:id="@+id/btn_getItem"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_discount"
        android:layout_above="@+id/textView8"
        android:layout_below="@+id/txt_total"
        android:numeric="integer"
        android:inputType="number"
        android:layout_alignEnd="@+id/tbl_bill"
        android:layout_toEndOf="@+id/btn_scan_item"
        android:text="0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grant Total"
        android:id="@+id/textView8"
        android:layout_above="@+id/btn_cancel_bill"
        android:layout_toStartOf="@+id/btn_gen_bill" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txt_grant_total"
        android:layout_above="@+id/btn_gen_bill"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount"
        android:id="@+id/textView10"
        android:layout_above="@+id/textView8"
        android:layout_toLeftOf="@id/edit_discount"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        android:id="@+id/btn_calculate"
        android:layout_toRightOf="@+id/btn_cancel_bill"
        android:layout_toLeftOf="@+id/btn_gen_bill"
        android:layout_below="@id/textView8"
         />


</RelativeLayout>
