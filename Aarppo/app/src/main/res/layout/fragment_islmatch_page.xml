<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    tools:context="com.appstory.aarppo.ISLMatchPage">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="for the battle"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:layout_gravity="right"
            android:layout_below="@+id/txt_countDown"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="days"
            android:id="@+id/textView4"
            android:layout_marginStart="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hours"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:layout_marginStart="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00: 00 : 00 : 00"
            android:id="@+id/txt_countDown"
            android:textSize="40sp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minutes"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView5"
            android:layout_marginStart="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seconds"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView6"
            android:layout_marginStart="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team1"
            android:maxLines="2"
            android:lines="2"
            android:id="@+id/isl_team1"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vs"
            android:id="@+id/textView8"
            android:layout_alignTop="@+id/isl_team1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team2"
            android:maxLines="2"
            android:lines="2"
            android:id="@+id/isl_team2"
            android:layout_alignTop="@+id/textView8"
            android:layout_toEndOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ground"
            android:id="@+id/isl_ground"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am cheering"
            android:id="@+id/textView9"
            android:layout_below="@+id/isl_ground"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I will sync at "
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10th minute"
            android:id="@+id/chk_Aarpo1"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="19dp"
            android:layout_alignEnd="@+id/chk_Aarpo2"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20th minute"
            android:id="@+id/chk_Aarpo2"
            android:layout_below="@+id/chk_Aarpo1"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30th minute"
            android:id="@+id/chk_Aarpo3"
            android:layout_below="@+id/chk_Aarpo2"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50th minute"
            android:id="@+id/chk_Aarpo5"
            android:layout_alignBottom="@+id/chk_Aarpo1"
            android:layout_toEndOf="@+id/textView7"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60th minute"
            android:id="@+id/chk_Aarpo6"
            android:layout_alignBottom="@+id/chk_Aarpo2"
            android:layout_alignStart="@+id/chk_Aarpo5"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75th minute"
            android:id="@+id/chk_Aarpo7"
            android:layout_alignTop="@+id/chk_Aarpo3"
            android:layout_alignStart="@+id/chk_Aarpo6"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45th minute"
            android:id="@+id/chk_Aarpo4"
            android:layout_below="@+id/chk_Aarpo3"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85th minute"
            android:id="@+id/chk_Aarpo8"
            android:layout_alignBottom="@+id/chk_Aarpo4"
            android:layout_alignStart="@+id/chk_Aarpo7"
            android:checked="false" />
    </RelativeLayout>
</FrameLayout>
