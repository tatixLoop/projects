<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sony.testapp.Databaseeg2">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_num1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:hint="NUMBER3:" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_num2"
        android:layout_below="@+id/et_num1"
        android:layout_alignRight="@+id/et_num1"
        android:layout_alignEnd="@+id/et_num1"
        android:layout_marginTop="52dp"
        android:hint="NUMBER2:" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_res"
        android:layout_below="@+id/et_num2"
        android:layout_alignRight="@+id/et_num2"
        android:layout_alignEnd="@+id/et_num2"
        android:layout_marginTop="71dp"
        android:hint="Result" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/bt_next"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/tv_res"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/bt_SAVE"
        android:layout_alignTop="@+id/bt_ADD"
        android:layout_alignRight="@+id/tv_res"
        android:layout_alignEnd="@+id/tv_res" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/bt_ADD"
        android:layout_alignTop="@+id/bt_next"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
