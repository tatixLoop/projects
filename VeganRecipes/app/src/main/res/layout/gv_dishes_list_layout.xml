<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="20dp">

    <LinearLayout
        android:id="@+id/relWrapper"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_dishbox"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Darkbg">

        <TextView
            android:id="@+id/txt_recipeName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_marginStart="4dp"
            android:text="@string/recipeName"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_recipeName"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ckTime_gi"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:contentDescription="@string/imgContentDescription"
                app:srcCompat="@drawable/clock1" />

            <TextView
                android:id="@+id/txt_cooktimegv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/cookTimeText"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_cal_gi"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="2dp"
                android:contentDescription="@string/imgContentDescription"
                app:srcCompat="@drawable/calorie" />

            <TextView
                android:id="@+id/txt_calgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="5dp"
                android:text="@string/caloryText"
                android:textColor="@android:color/white"
                android:textSize="12sp" />


        </LinearLayout>


    </RelativeLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>