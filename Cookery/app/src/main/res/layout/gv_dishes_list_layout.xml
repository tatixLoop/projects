<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="70dp"
    card_view:cardElevation="10dp">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rel_details"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_below="@+id/rel_dishbox"
        android:background="@color/Darkbg"
        android:paddingTop="70dp">

        <TextView
            android:id="@+id/txt_recipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_recipeName"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ckTime_gi"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_recipeName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/clock1" />

            <TextView
                android:id="@+id/txt_cooktimegv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="200min"
                android:textColor="@android:color/white"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/img_cal_gi"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/calorie" />

            <TextView
                android:id="@+id/txt_calgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="5dp"
                android:text="0000Cal"
                android:textColor="@android:color/white"
                android:textSize="11sp" />


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_dishbox"
        android:layout_width="170dp"
        android:layout_height="170dp">

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>